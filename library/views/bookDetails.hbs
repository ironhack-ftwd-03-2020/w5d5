{{#with book}}
<h1>{{title}}</h1>
<p>Summary: {{description}}</p>
<p>Rating: {{rating}}</p>
<a href="/books/edit/{{_id}}">Edit</a>
{{/with}}

<h3>Written by:</h3>
{{#with book.author}}
<p>{{name}} {{lastName}}</p>
<p>Nationality: {{nationality}}</p>
<img src="{{pictureUrl}}" height="200px">
{{/with}}

{{!-- List the reviews --}}
<h2>Reviews</h2>
{{#if book.reviews}}
{{#each book.reviews}}
<div class="review-item">
  <p>{{this.comments}}</p>
  <span>{{this.user}}</span>
</div>
{{/each}}
{{else}}
<p>No reviews yet</p>
{{/if}}

{{!-- Add a review --}}
<p>Add a review</p>
<form action="/books/{{book._id}}/reviews" method="POST">
  <label for="">User:</label>
  <input type="text" name="user">

  <label for="">Comments:</label>
  <textarea type="text" name="comments"></textarea>

  <button type="submit">ADD</button>
</form>