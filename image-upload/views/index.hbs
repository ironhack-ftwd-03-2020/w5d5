<h1>Best Movies of the World</h1>
<div class="movies-wrapper">
  {{#each movies}}
  <div class="movie-item">
    <h4>{{this.title}}</h4>
    <p>{{this.description}}</p>
    <img src="{{this.imgPath}}" alt="">
    <a href="/movie/delete/{{this._id}}">❌</a>
  </div>
  {{else}}
  <p>There are no movies yet! 🤷‍♀️🤷‍♂️</p>
  {{/each}}
</div>
<a href="/movie/add">Add a movie</a>